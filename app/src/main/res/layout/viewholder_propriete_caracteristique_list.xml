<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/activity_horizontal_margin"
    >

    <TextView
        android:id="@+id/caracteristique_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/propriete.json/data/caracteristiques/label" />

    <TextView
        android:id="@+id/caracteristique_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/small_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/caracteristique_label"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@sample/propriete.json/data/caracteristiques/value" />
</androidx.constraintlayout.widget.ConstraintLayout>